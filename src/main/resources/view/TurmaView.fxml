            <TableColumn fx:id="colunaDisciplina" prefWidth="200.0" text="Disciplina" />
            <TableColumn fx:id="colunaProfessor" prefWidth="200.0" text="Professor" />
            <TableColumn fx:id="colunaHorario" prefWidth="150.0" text="HorÃ¡rio" />
        </columns>
    </TableView>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button onAction="#novaTurma" text="Nova" />
        <Button onAction="#editarTurma" text="Editar" />
        <Button onAction="#excluirTurma" text="Excluir" />
    </HBox>
    <Button onAction="#voltarAoMenu" text="Voltar ao Menu" />
</VBox>