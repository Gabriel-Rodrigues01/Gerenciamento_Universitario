        <columns>
            <TableColumn fx:id="colunaId" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colunaNome" prefWidth="300.0" text="Nome do Curso" />
            <TableColumn fx:id="colunaCargaHoraria" prefWidth="150.0" text="Carga HorÃ¡ria" />
        </columns>
    </TableView>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button onAction="#novoCurso" text="Novo" />
        <Button onAction="#editarCurso" text="Editar" />
        <Button onAction="#excluirCurso" text="Excluir" />
    </HBox>
    <Button onAction="#voltarAoMenu" text="Voltar ao Menu" />
</VBox>