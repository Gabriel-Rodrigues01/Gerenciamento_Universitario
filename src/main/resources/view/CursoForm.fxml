<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CursoFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 18pt; -fx-font-weight: bold;" text="Formulário de Curso" />
    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtNome" promptText="Ex: Ciência da Computação" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Carga Horária:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtCargaHoraria" promptText="Ex: 3600" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="btnSalvar" onAction="#salvar" text="Salvar" />
        <Button onAction="#cancelar" text="Cancelar" />
    </HBox>
</VBox>