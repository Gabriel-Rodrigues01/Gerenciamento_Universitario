<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfessorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 24pt; -fx-font-weight: bold;" text="Gerenciamento de Professores" />
    <TableView fx:id="tabelaProfessores" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colunaId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colunaNome" prefWidth="200.0" text="Nome" />
            <TableColumn fx:id="colunaEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colunaFormacao" prefWidth="250.0" text="Formação" />
        </columns>
    </TableView>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button onAction="#novoProfessor" text="Novo" />
        <Button onAction="#editarProfessor" text="Editar" />
        <Button onAction="#excluirProfessor" text="Excluir" />
    </HBox>
    <Button onAction="#voltarAoMenu" text="Voltar ao Menu" />
</VBox>