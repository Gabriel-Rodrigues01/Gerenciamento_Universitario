<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DisciplinaProfessorFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 18pt; -fx-font-weight: bold;" text="Associar Professores à Disciplina" />
    <Label fx:id="lblDisciplinaNome" style="-fx-font-size: 14pt;" text="Disciplina: [Nome da Disciplina]" />
    <Label text="Professores Disponíveis:" />
    <ListView fx:id="listViewProfessoresDisponiveis" VBox.vgrow="ALWAYS" />
    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#associarProfessor" text="Associar &gt;&gt;" />
        <Button onAction="#desassociarProfessor" text="&lt;&lt; Desassociar" />
    </HBox>
    <Label text="Professores Associados:" />
    <ListView fx:id="listViewProfessoresAssociados" VBox.vgrow="ALWAYS" />
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#salvar" text="Salvar" />
        <Button onAction="#cancelar" text="Cancelar" />
    </HBox>
</VBox>